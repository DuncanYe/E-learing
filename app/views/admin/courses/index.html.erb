<table class="table table-hover">
  <h1>後台管理系統</h1>
  <%= link_to '新增商品', new_admin_course_path, class: "btn btn btn-primary" %>
  <thead>
    <tr>
      <th>主題</th>
      <th>類別</th>
      <th>狀態</th>
      <th>金額</th>
      <th>幣別</th>
      <th>幾天期限</th>
      <th>描述</th>
      <th>編輯</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
    <tr>
      <td><%= course.name %></td>
      <td><%= course.category.name %></td>
      <td><%= course.state %></td>
      <td><%= course.price %></td>
      <td><%= course.currency %></td>
      <td><%= course.available_day %></td>
      <td><%= course.desc %></td>
      <td>
        <%= link_to '編輯', edit_admin_course_path(course), class: "btn btn-xs btn-default" %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>