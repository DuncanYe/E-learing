<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for  [:admin, course] do |f| %>
        <div class="form-group">
          <%= f.label :name, "主題" %>
          <%= f.text_field :name, class: "form-control"%>
        </div>
        <div class="form-group">
          <%= f.label :catogory, "屬於類別" %>
          <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "選擇類別"}, {class: "form-control"} %>
        </div>
        <div class="form-group">
          <%= f.label :state, "商品狀態" %>
          <%= f.select(:state, options_for_select(Course::states, course.state ), {}, { :class => 'form-control'}) %>
        </div>
        <div class="form-group">
          <%= f.label :price, "售價" %>
          <%= f.text_field :price, class: "form-control"%>
        </div>
        <div class="form-group">
          <%= f.label :currency, "幣別" %>
          <%= f.select(:currency, options_for_select(Course::currencies, course.currency ), {}, { :class => 'form-control'}) %>        </div>
        <div class="form-group">
          <%= f.label :available_day, "使用者購買後，可使用至當天的 (23:59:59)" %>
          <%= f.date_field :available_day, class: "form-control"%>
        </div>
        <div class="form-group">
          <%= f.label :url, "URL" %>
          <%= f.text_field :url, class: "form-control"%>
        </div>
        <div class="form-group">
          <%= f.label :desc, "描述" %>
          <%= f.text_area :desc, class: "form-control"%>
        </div>
        <div class="form-group">
          <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
